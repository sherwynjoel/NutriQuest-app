rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Leaderboard is read-only for authenticated users
    match /leaderboard/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Game data is read-only for authenticated users
    match /games/{gameId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == resource.data.userId;
    }
    
    // Quiz questions are read-only for authenticated users
    match /quiz_questions/{questionId} {
      allow read: if request.auth != null;
    }
    
    // Food items are read-only for authenticated users
    match /food_items/{itemId} {
      allow read: if request.auth != null;
    }
    
    // Meal components are read-only for authenticated users
    match /meal_components/{componentId} {
      allow read: if request.auth != null;
    }
    
    // User progress is read/write for the user
    match /user_progress/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Achievements are read-only for authenticated users
    match /achievements/{achievementId} {
      allow read: if request.auth != null;
    }
    
    // Badges are read-only for authenticated users
    match /badges/{badgeId} {
      allow read: if request.auth != null;
    }
    
    // User badges are read/write for the user
    match /user_badges/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // User achievements are read/write for the user
    match /user_achievements/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Global stats are read-only for authenticated users
    match /global_stats/{statId} {
      allow read: if request.auth != null;
    }
    
    // User stats are read/write for the user
    match /user_stats/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}
